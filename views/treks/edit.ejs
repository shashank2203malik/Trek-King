                <h5>Delete Images: </h5>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% trek.images.forEach((img, i)=> { %>
                        <div class="col">
                            <div class="card">
                                <label for="image-<%= i %>"><img class="card-img" src="<%= img.thumbnail %>" alt="">
                                    <div class="card-img-overlay text-end pt-1 pe-2">
                                        <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                            value="<%= img.filename %>" id="image-<%= i %>">
                                    </div>
                                </label>
                            </div>
                        </div>
                        <% }) %>
                </div>

                <button class="btn btn-success">Update Trek</button>
            </form>
            <div class="mb-3">
                <a class="btn btn-danger mt-3" href="/treks/<%= trek.id %>">I don't want to</a>
            </div>
        </div>
    </div>